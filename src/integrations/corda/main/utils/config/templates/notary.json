{
  "definitions": {},
  "type": "object",
  "title": "Notary Schema",
  "required": [
    "myLegalName",
    "keyStorePassword",
    "trustStorePassword",
    "crlCheckSoftFail",
    "dataSourceProperties",
    "database",
    "p2pAddress",
    "rpcSettings",
    "notary",
    "devMode"
  ],
  "properties": {
    "myLegalName": {
      "type": "string",
      "default": "O=Notary Service,OU=corda,L=London,C=GB",
      "pattern": "^(.*)$"
    },
    "keyStorePassword": {
      "type": "string",
      "default": "cordacadevpass",
      "pattern": "^(.*)$"
    },
    "trustStorePassword": {
      "type": "string",
      "default": "trustpass",
      "pattern": "^(.*)$"
    },
    "crlCheckSoftFail": {
      "type": "boolean",
      "default": true
    },
    "dataSourceProperties": {
      "type": "object",
      "required": [
        "dataSourceClassName",
        "dataSource.url",
        "dataSource.user",
        "dataSource.password"
      ],
      "properties": {
        "dataSourceClassName": {
          "type": "className",
          "value" : "",
          "default": "org.postgresql.ds.PGSimpleDataSource",
          "pattern": "^(.*)$"
        },
        "dataSource.url": {
          "type": "postgresUrl",
          "default": "jdbc:postgresql://127.0.0.1:{{port}}/{{schema}}",
          "pattern": "^(.*)$"
        },
        "dataSource.user": {
          "type": "username",
          "default": "corda",
          "pattern": "^(.*)$"
        },
        "dataSource.password": {
          "type": "string",
          "default": "",
          "pattern": "^(.*)$"
        }
      }
    },
    "database": {
      "type": "object",
      "required": [
        "transactionIsolationLevel"
      ],
      "properties": {
        "transactionIsolationLevel": {
          "type": "string",
          "default": "READ_COMMITTED"
        }
      }
    },
    "p2pAddress": {
      "type": "url",
      "default": "localhost:12345",
      "pattern": "^localhost:(102[4-9]|10[3-9][0-9]|1[1-9][0-9]{2}|[2-9][0-9]{3}|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])$"
    },
    "rpcSettings": {
      "type": "object",
      "required": [
        "useSsl",
        "standAloneBroker",
        "address",
        "adminAddress"
      ],
      "properties": {
        "useSsl": {
          "type": "boolean",
          "default": false
        },
        "standAloneBroker": {
          "type": "boolean",
          "default": false
        },
        "address": {
          "type": "url",
          "default": "localhost:10005",
          "pattern": "^(.*)$"
        },
        "adminAddress": {
          "type": "url",
          "default": "localhost:10006",
          "pattern": "^(.*)$"
        }
      }
    },
    "notary": {
      "type": "object",
      "required": [
        "validating"
      ],
      "properties": {
        "validating": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "devMode": {
      "type": "boolean",
      "default": true
    },
    "networkServices": {
      "type": "object",
      "default": null,
      "required": [
        "doormanURL",
        "networkMapURL"
      ],
      "properties": {
        "doormanURL": {
          "type": "url",
          "default": "https://cz.example.com",
          "pattern": "^(.*)$"
        },
        "networkMapURL": {
          "type": "url",
          "default": "https://cz.example.com",
          "pattern": "^(.*)$"
        }
      }
    }
  }
}
