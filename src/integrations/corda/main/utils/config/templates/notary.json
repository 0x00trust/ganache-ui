{
  "definitions": {},
  "type": "object",
  "title": "Notary Schema",
  "required": [
    "myLegalName",
    "keyStorePassword",
    "trustStorePassword",
    "p2pAddress",
    "rpcSettings",
    "notary",
    "devMode"
  ],
  "properties": {
    "myLegalName": {
      "type": "string",
      "default": "",
      "examples": [
        "O=Notary Service,OU=corda,L=London,C=GB"
      ],
      "pattern": "^(.*)$"
    },
    "keyStorePassword": {
      "type": "string",
      "default": "",
      "examples": [
        "cordacadevpass"
      ],
      "pattern": "^(.*)$"
    },
    "trustStorePassword": {
      "type": "string",
      "default": "",
      "examples": [
        "trustpass"
      ],
      "pattern": "^(.*)$"
    },
    "p2pAddress": {
      "type": "string",
      "default": "",
      "examples": [
        "localhost:12345"
      ],
      "pattern": "^localhost:(102[4-9]|10[3-9][0-9]|1[1-9][0-9]{2}|[2-9][0-9]{3}|[1-5][0-9]{4}|6[0-4][0-9]{3}|65[0-4][0-9]{2}|655[0-2][0-9]|6553[0-5])$"
    },
    "rpcSettings": {
      "type": "object",
      "required": [
        "useSsl",
        "standAloneBroker",
        "address",
        "adminAddress"
      ],
      "properties": {
        "useSsl": {
          "type": "boolean",
          "default": false,
          "examples": [
            false
          ]
        },
        "standAloneBroker": {
          "type": "boolean",
          "default": false,
          "examples": [
            false
          ]
        },
        "address": {
          "type": "string",
          "default": "",
          "examples": [
            "localhost:10005"
          ],
          "pattern": "^(.*)$"
        },
        "adminAddress": {
          "type": "string",
          "default": "",
          "examples": [
            "localhost:10006"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "notary": {
      "type": "object",
      "required": [
        "validating"
      ],
      "properties": {
        "validating": {
          "type": "boolean",
          "default": false,
          "examples": [
            false
          ]
        }
      }
    },
    "devMode": {
      "type": "boolean",
      "default": false,
      "examples": [
        true
      ]
    },
    "networkServices": {
      "type": "object",
      "default": null,
      "required": [
        "doormanURL",
        "networkMapURL"
      ],
      "properties": {
        "doormanURL": {
          "type": "string",
          "default": "",
          "examples": [
            "https://cz.example.com"
          ],
          "pattern": "^(.*)$"
        },
        "networkMapURL": {
          "type": "string",
          "default": "",
          "examples": [
            "https://cz.example.com"
          ],
          "pattern": "^(.*)$"
        }
      }
    }
  }
}
