{
  "type": "object",
  "required": [
    "myLegalName",
    "keyStorePassword",
    "trustStorePassword",
    "crlCheckSoftFail",
    "dataSourceProperties",
    "p2pAddress",
    "rpcSettings",
    "rpcUsers",
    "devMode"
  ],
  "properties": {
    "myLegalName": {
      "type": "string",
      "default": "",
      "examples": [
        "O=Bank A,L=London,C=GB"
      ],
      "pattern": "^(.*)$"
    },
    "keyStorePassword": {
      "type": "string",
      "default": "",
      "examples": [
        "cordacadevpass"
      ],
      "pattern": "^(.*)$"
    },
    "trustStorePassword": {
      "type": "string",
      "default": "",
      "examples": [
        "trustpass"
      ],
      "pattern": "^(.*)$"
    },
    "crlCheckSoftFail": {
      "type": "boolean",
      "default": false,
      "examples": [
        true
      ]
    },
    "dataSourceProperties": {
      "type": "object",
      "required": [
        "dataSourceClassName",
        "dataSource.url",
        "dataSource.user",
        "dataSource.password"
      ],
      "properties": {
        "dataSourceClassName": {
          "type": "className",
          "default": "",
          "examples": [
            "org.h2.jdbcx.JdbcDataSource"
          ],
          "pattern": "^(.*)$"
        },
        "dataSource.url": {
          "type": "string",
          "default": "",
          "examples": [
            "jdbc:h2:file:\"${baseDirectory}\"/persistence"
          ],
          "pattern": "^(.*)$"
        },
        "dataSource.user": {
          "type": "username",
          "default": "",
          "examples": [
            "sa"
          ],
          "pattern": "^(.*)$"
        },
        "dataSource.password": {
          "type": "string",
          "default": "",
          "examples": [
            ""
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "p2pAddress": {
      "type": "string",
      "default": "",
      "examples": [
        "localhost:10002"
      ],
      "pattern": "^(.*)$"
    },
    "rpcSettings": {
      "type": "object",
      "required": [
        "useSsl",
        "standAloneBroker",
        "address",
        "adminAddress"
      ],
      "properties": {
        "useSsl": {
          "$id": "#/properties/rpcSettings/properties/useSsl",
          "type": "boolean",
          "title": "The Usessl Schema",
          "default": false,
          "examples": [
            false
          ]
        },
        "standAloneBroker": {
          "$id": "#/properties/rpcSettings/properties/standAloneBroker",
          "type": "boolean",
          "title": "The Standalonebroker Schema",
          "default": false,
          "examples": [
            false
          ]
        },
        "address": {
          "$id": "#/properties/rpcSettings/properties/address",
          "type": "string",
          "title": "The Address Schema",
          "default": "",
          "examples": [
            "localhost:10003"
          ],
          "pattern": "^(.*)$"
        },
        "adminAddress": {
          "$id": "#/properties/rpcSettings/properties/adminAddress",
          "type": "string",
          "title": "The Adminaddress Schema",
          "default": "",
          "examples": [
            "localhost:10004"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "rpcUsers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "username",
          "password",
          "permissions"
        ],
        "properties": {
          "username": {
            "type": "username",
            "default": "",
            "examples": [
              "user1"
            ],
            "pattern": "^(.*)$"
          },
          "password": {
            "type": "password",
            "default": "",
            "examples": [
              "letmein"
            ],
            "pattern": "^(.*)$"
          },
          "permissions": {
            "type": "permissionsArray",
            "items": {
              "type": "string",
              "required":[
                "ALL"
              ],
              "properties": {
                "ALL": {
                  "type": "string",
                  "default": "",
                  "examples": [
                    "ALL"
                  ],
                  "pattern": "^(.*)$"
                }
              }
            }
          }
        }
      }
    },
    "devMode": {
      "type": "boolean",
      "default": false,
      "examples": [
        true
      ]
    }
  }
}
